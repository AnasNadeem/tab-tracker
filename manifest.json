{
  "manifest_version": 3,
  "name": "Tab Time Tracker",
  "description": "Track time spent on each tab and URL with the Tab Time Tracker extension for better productivity and browsing habit management",
  "version": "3.0.0",
  "icons": {
    "32": "images/icon-32.png",
    "64": "images/icon-64.png",
    "128": "images/icon-128.png",
    "256": "images/icon-256.png",
    "768": "images/icon-768.png"
  },
  "action": {
    "default_title": "Tab Time Tracker",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "storage"]
}